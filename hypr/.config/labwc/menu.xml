<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu>
<!-- Note: for localization support of menu items "client-menu" has to be removed here -->
<menu id="client-menu">
  <item label="Minimize">
    <action name="Iconify" />
  </item>
  <item label="Maximize">
    <action name="ToggleMaximize" />
  </item>
  <item label="Fullscreen">
    <action name="ToggleFullscreen" />
  </item>
  <item label="Roll up/down">
    <action name="ToggleShade" />
  </item>
  <item label="Decorations">
    <action name="ToggleDecorations" />
  </item>
  <item label="Always on Top">
    <action name="ToggleAlwaysOnTop" />
  </item>
  <menu id="workspaces" label="Workspace">
    <item label="Move left">
      <action name="SendToDesktop" to="left" />
    </item>
    <item label="Move right">
      <action name="SendToDesktop" to="right" />
    </item>
    <separator />
    <item label="Always on Visible Workspace">
      <action name="ToggleOmnipresent" />
    </item>
  </menu>
  <item label="Close">
    <action name="Close" />
  </item>
</menu>

<menu id="root-menu">
  <item label="Terminal">
    <action name="Execute" command="kitty" />
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Exit">
    <action name="Exit" />
  </item>
  <item label="Poweroff">
    <action name="Execute" command="systemctl -i poweroff" />
  </item>
</menu>

<menu id="custom-menu">
    <menu id="programs-menu" label="Programs">
        <item label="Google Chrome">
            <action name="Execute" command="google-chrome-unstable"/>
        </item>
        <item label="Kitty">
            <action name="Execute" command="kitty"/>
        </item>
        <item label="Vesktop">
            <action name="Execute" command="vesktop"/>
        </item>
        <item label="Steam">
            <action name="Execute" command="steam"/>
        </item>
        <item label="Neovide">
            <action name="Execute" command="neovide"/>
        </item>
        <item label="Neovim">
            <action name="Execute" command="kitty -e nvim"/>
        </item>
        <item label="Spotify">
            <action name="Execute" command="spotify"/>
        </item>
    </menu>
    <menu id="hardware-menu" label="Utilities">
        <item label="Pavucontrol">
            <action name="Execute" command="pavucontrol"/>
        </item>
        <item label="Nautilus">
            <action name="Execute" command="nautilus"/>
        </item>
        <item label="nwg-look">
            <action name="Execute" command="nwg-look"/>
        </item>
    </menu>
    <menu id="power-menu" label="Power">
        <item label="Shutdown">
            <action name="Execute" command="systemctl poweroff"/>
        </item>
        <item label="Reboot">
            <action name="Execute" command="systemctl reboot"/>
        </item>
        <item label="Hybrid-Sleep">
            <action name="Execute" command="systemctl hybrid-sleep"/>
        </item>
        <item label="Hibernate">
            <action name="Execute" command="systemctl hibernate"/>
        </item>
    </menu>
    <item label="Reconfigure">
        <action name="Reconfigure"/>
    </item>
    <item label="Exit">
        <action name="Exit"/>
    </item>
</menu>

</openbox_menu>
